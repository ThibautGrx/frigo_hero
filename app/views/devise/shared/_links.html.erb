

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "S'inscrire", new_registration_path(resource_name),class:"alogin" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Mot de passe oublié ?", new_password_path(resource_name),class:"alogin" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Vous n'avez pas reçu d'email de confirmation ?", new_confirmation_path(resource_name),class:"alogin" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Vous n'avez pas reçu les instructions de déblocage de compte ?", new_unlock_path(resource_name),class:"alogin" %><br />
<% end -%>


<%-if controller_name != 'registrations'%>
  <% action = "Se connecter" %>
<% else %>
  <% action = "S'inscrire" %>
<% end %>
<%#- if devise_mapping.omniauthable? &&  %>
<%- if false  %>

  <%= link_to omniauth_authorize_path(resource_name, :google_oauth2) do %>
    <div class="btn btn-block btn-social btn-sm btn-google buttonlog">
      <span class="fa fa-google"></span><%=action%> avec Google
    </div>
  <% end %>
<% end -%>


<%- if controller_name != 'sessions' %>
  <%= link_to "Se connecter", new_session_path(resource_name), class:"btn btn-success btn-block buttonlog2" %><br />
<% end -%>
