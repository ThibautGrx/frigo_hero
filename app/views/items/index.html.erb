  </title>
  <% end %>
  
  <% if @items!=[]%>
    <div id="map"></div>
    <div id="table">
      <div class="row justify-content-center">
        <% flash.each do |key, value| %>
          <div class="col-sm-10 col-6 alert alert-success mt-2">
            <%= value %>
          </div>
        <% end %>
      </div>
      <%= render "/items/results"%>
